- if price.present?
  %meta{ itemprop: 'priceCurrency', content: price.currency }
  %meta{ itemprop: 'price', content: price.to_f }
  %span{ data: { flow: { item_number: sku&.id.to_s } } }
    %span{ data: { local_prices: local_prices.to_json, flow_price_attr: flow_price_attr } }
      = number_to_currency price
