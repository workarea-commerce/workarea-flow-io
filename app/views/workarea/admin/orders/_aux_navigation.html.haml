.grid.grid--auto.grid--right.grid--middle
  - if model.user.present?
    .grid__cell= link_to t('workarea.admin.orders.view_user', user: model.user.name), user_path(model.user), local_assigns[:html_options]
  - if model.flow?
    .grid__cell= link_to t('workarea.admin.orders.view_flow_order'), "https://console.flow.io/#{Workarea::FlowIo.organization_id}/orders/#{model.id}", class: 'workflow-bar__button workflow-bar__button--update'
