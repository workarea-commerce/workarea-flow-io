module Workarea
  decorate ShippingTest, with: :flow_io do
    def test_set_flow_shipping
      shipping = Shipping.new
      shipping.set_flow_shipping!(flow_shipping_method, flow_prices)

      shipping.reload

      assert_equal("Standard Shipping", shipping.shipping_service.name)

      assert_equal(3, shipping.price_adjustments.size)
      assert_equal(
        %w(shipping tax tax),
        shipping.price_adjustments.map(&:price).sort
      )

      assert_equal(3, shipping.flow_price_adjustments.size)
      assert_equal(
        %w(shipping tax tax),
        shipping.flow_price_adjustments.map(&:price).sort
      )

      assert_equal("paid", shipping.delivery_duty)
    end

    private

